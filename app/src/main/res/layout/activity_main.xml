<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选取图片"
        android:id="@+id/button_open_album"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_picture"
        android:layout_below="@+id/button_open_album"
        android:layout_centerHorizontal="true"
         />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:id="@+id/gridLayout_game"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:padding="2dp"
            android:layout_row="0"
            android:layout_column="0"
            android:scaleType="fitCenter"
            android:id="@+id/game_1"/>
        <ImageView
            android:padding="2dp"
            android:layout_row="0"
            android:layout_column="1"
            android:scaleType="fitCenter"
            android:id="@+id/game_2"/>
        <ImageView
            android:padding="2dp"
            android:layout_row="0"
            android:layout_column="2"
            android:scaleType="fitCenter"
            android:id="@+id/game_3"/>
        <ImageView
            android:padding="2dp"
            android:layout_row="1"
            android:layout_column="0"
            android:scaleType="fitCenter"
            android:id="@+id/game_4"/>
        <ImageView
            android:padding="2dp"
            android:layout_row="1"
            android:layout_column="1"
            android:scaleType="fitCenter"
            android:id="@+id/game_5"/>
        <ImageView
            android:padding="2dp"
            android:layout_row="1"
            android:layout_column="2"
            android:scaleType="fitCenter"
            android:id="@+id/game_6"/>
        <ImageView
            android:padding="2dp"
            android:layout_row="2"
            android:layout_column="0"
            android:scaleType="fitCenter"
            android:id="@+id/game_7"/>
        <ImageView
            android:padding="2dp"
            android:layout_row="2"
            android:layout_column="1"
            android:scaleType="fitCenter"
            android:id="@+id/game_8"/>
        <ImageView
            android:padding="2dp"
            android:layout_row="2"
            android:layout_column="2"
            android:scaleType="fitCenter"
            android:id="@+id/game_9"/>
    </GridLayout>


</RelativeLayout>
